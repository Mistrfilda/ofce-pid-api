{
  "name": "mistrfilda/pid-api",
  "license": "MIT",
  "description": "PID api integration using guzzle/http client",
  "require": {
	"php": ">=7.3",
	"guzzlehttp/guzzle": "^6.3",
	"nette/utils": "^3.0",
	"nette/schema": "^1.0",
	"psr/http-message": "^1.0",
	"psr/http-client": "^1.0",
    "nette/http": "^3.0"
  },
  "require-dev": {
	"phpstan/phpstan": "^0.12",
	"phpstan/phpstan-strict-rules": "^0.12",
	"nette/tester": "^2.2",
	"jakub-onderka/php-parallel-lint": "^1.0",
	"tracy/tracy": "^2.6",
	"roave/security-advisories": "dev-master",
	"mockery/mockery": "^1.2",
    "symplify/easy-coding-standard-prefixed": "^7.2"
  },
  "autoload": {
	"psr-4": {
	  "Ofce\\Pid\\Api\\": "src"
	}
  },
  "scripts": {
	"stan": "vendor/bin/phpstan analyse -l 7 -c phpstan.neon src --ansi",
	"lint": "vendor/bin/parallel-lint --colors src/",
	"cs": "vendor/bin/ecs -c ecs.yaml check src --ansi",
	"cs-fix": "vendor/bin/ecs -c ecs.yaml check src --fix --ansi",
	"build-all": "composer lint && composer stan && composer cs"
  }
}
